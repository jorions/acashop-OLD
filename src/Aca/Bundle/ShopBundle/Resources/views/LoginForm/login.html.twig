{% extends '::base.html.twig' %}

{% block content %}

    {% if loggedIn %}

        <header class="jumbotron hero-spacer-centered">
            <h1>Welcome, {{ name }}!</h1>
        </header>

    {% else %}

        <header class="jumbotron hero-spacer-centered">
            <h1>Account Login</h1>
        </header>

        <div class="col-md-3 col-sm-6 hero-feature centering">
            <div class="thumbnail login-form">
                <form action="/" method="POST">

                    Username:
                    <br />
                    <input type="text" name="username" value="{{ username }}"/>
                    <br />
                    Password:
                    <br />
                    <input type="password" name="password" value="{{ password }}"/>

                    <br />
                    <br />

                    <input class="btn btn-primary" type="submit" value="Login" />
                </form>

                <br />
                <br />

                <a class="btn btn-primary btn-reverse-colors-href" href="/registration">Sign Up</a>

            </div>
        </div>

        {% if msg %}
            <div class="error">{{ msg }}</div>
        {% endif %}

    {% endif %}
{% endblock content %}